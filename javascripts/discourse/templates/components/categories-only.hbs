{{#if categories}}
  {{#if filteredCategories}}
    <div class="category-list">
        {{#each categories as |category|}}
          {{parent-category-row category=category showTopics=showTopics}}
        {{/each}}
    </div>
  {{/if}}

  {{#if mutedCategories}}
    <div class="muted-categories">
      <a href class="muted-categories-link" {{action "toggleShowMuted"}}>
        <h3 class="muted-categories-heading">{{i18n "categories.muted"}}</h3>
        {{#if mutedToggleIcon}}
          {{d-icon mutedToggleIcon}}
        {{/if}}
      </a>
      <div class="category-list {{unless showMutedCategories "hidden"}}">
          {{#each categories as |category|}}
            {{parent-category-row
              category=category
              showTopics=showTopics
              listType="muted"
            }}
          {{/each}}
      </div>
    </div>
  {{/if}}
{{/if}}

{{plugin-outlet
  name="below-categories-only"
  tagName=""
  args=(hash categories=categories showTopics=showTopics)
}}